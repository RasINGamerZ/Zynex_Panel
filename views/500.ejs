<%- include('components/template') %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.34.0/min/vs/loader.js"></script>
<main id="content">
    <div class="bg-transparent">
        <div class="sm:flex sm:items-center px-8 pt-4">
            <div class="sm:flex-auto">
                <h1 class="text-base font-medium leading-6 text-white"><%= req.translations.manageInstance %></h1>
                <p class="mt-1 tracking-tight text-sm text-neutral-500"><%= req.translations.instanceViewDetailText %></p>
            </div>
        </div>
    </div>

    <%- include('components/instance') %>

    <h1 class="text-neutral-500 font-mono tracking-widest px-8 text-sm mb-1"><%= req.translations.fivezerozeroInstanceError %></h1>
    <p class="text-white font-medium text-lg px-8 mt-4"><%= req.translations.somethingWentWrongThere %></p>
    <p class="text-neutral-400 font-normal px-8 mt-1"><%= req.translations.returnedTextError %> <code><%= error || req.translations.informationAvailableError %></code></p>
</main>
<%- include('components/footer') %>

<!-- Branding footer injected by assistant -->
<style>
/* Simple footer style (black + blue + white theme friendly) */
#zynex-branding-footer{position:relative; padding:12px 16px; text-align:center; font-family:Inter, system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial; background:transparent; color:#ffffff; z-index:9999; font-size:13px;}
#zynex-branding-footer a{color:#78bfff; text-decoration:none; font-weight:600;}
</style>
<div id="zynex-branding-footer">Zynex Panel — powered by Hydra and MrDrayNoX</div>
<script>
// Ensure document title reflects branding
try{
    if (!document.title || document.title.toLowerCase().includes('panel')) {
        document.title = "Zynex Panel — powered by Hydra and MrDrayNoX";
    }
}catch(e){console && console.warn(e)}
</script>
<!-- End branding footer -->
